@model IEnumerable<HW9.Models.User>

@{
    ViewData["Title"] = "ListUsers";
}

<h1>ListUsers</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Email
            </th>
            <th>
                Password
            </th>
            <th>
                Name
            </th>
            <th>
                Age
            </th>
            <th>
                RoleFk
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleFk)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new { id=item.Id }) |
                @Html.ActionLink("Details", "DetailsUser", new { id=item.Id }) |
                @Html.ActionLink("Delete", "DeleteUser", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
