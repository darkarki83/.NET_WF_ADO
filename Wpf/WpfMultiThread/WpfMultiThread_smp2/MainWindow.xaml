<Window x:Class="WpfMultiThread_smp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMultiThread_smp2"
        mc:Ignorable="d"
        Title="MainWindow" Width="370" SizeToContent="Height">
    <Grid>
        <Button x:Name="buttonThread" Content=" New Thread " Height="51" HorizontalAlignment="Left" 
                Margin="20, 20, 0 , 20" Width="120" Click="Click_Thread" VerticalAlignment="Top"></Button>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="51" Margin="150, 20, 0, 20"
                 VerticalAlignment="Top" Width="180" TextAlignment="Left" Padding="0, 15, 0, 0"></TextBox>
    </Grid>
</Window>
