@model Chat.Models.User

@{
    ViewData["Title"] = "EditRole";
}

<h1>EditRole</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                @Html.DropDownList("Id", new SelectList(ViewBag.Names, "Id", "Name"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="RoleFk" class="control-label"></label>
                @Html.DropDownList("RoleFk", new SelectList(ViewBag.Roles, "Id", "Name"), new { @class = "form-control" })
                <span asp-validation-for="RoleFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListUsers">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
