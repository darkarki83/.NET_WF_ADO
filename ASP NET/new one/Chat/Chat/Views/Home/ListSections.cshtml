@model IEnumerable<Chat.Models.Section>

@{
    ViewData["Title"] = "ListSections";
}

<h1>ListSections</h1>

<p>
    <a asp-action="CreateSection">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpenUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenUser)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditSection", new { id=item.Id }) |
                @Html.ActionLink("Details", "DetailsSection", new { id=item.Id }) |
                @Html.ActionLink("Delete", "DeleteSection", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
