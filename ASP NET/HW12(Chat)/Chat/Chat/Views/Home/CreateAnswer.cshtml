@model Chat.Models.Answer

@{
    ViewData["Title"] = "CreateAnswer";
}

<h1>CreateAnswer</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateAnswer">
            <div class="form-group">
                <label asp-for="Post" class="control-label"></label>
                <textarea asp-for="Post" rows="5" cols="30" class="form-control" text-wrap:normal" type="text" placeholder="Please add your answer here"></textarea>
                <span asp-validation-for="Post" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorUser" class="control-label"></label>
                @Html.DropDownList("AuthorUser", new SelectList(ViewBag.AuthorUser, "Id", "Name"), new { @class = "form-control" })
                <span asp-validation-for="AuthorUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThemeFk" class="control-label"></label>
                @Html.DropDownList("ThemeFk", new SelectList(ViewBag.ThemeFk, "Id", "Name"), new { @class = "form-control" })
                <span asp-validation-for="ThemeFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListAnswer">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
